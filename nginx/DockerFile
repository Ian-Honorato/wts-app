server {
    listen 80;
    server_name 72.60.13.212;

    # --- Proxy para a API (Backend) ---
    # Todas as requisições que começam com /api/ serão enviadas para o backend.
    location /api/ {
        # Remove o /api/ do início da URL antes de passar para o backend.
        rewrite ^/api/(.*)$ /$1 break;

        proxy_pass http://backend:3000;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # --- Proxy para o Frontend ---
    # Todas as outras requisições irão para o frontend.
    location / {
        # CORREÇÃO: A porta do frontend agora é 3000, de acordo com o novo Dockerfile.
        proxy_pass http://frontend:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade'; # Necessário para WebSockets, se aplicável.
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}

